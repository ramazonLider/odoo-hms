<odoo>
    <data>
        <!-- Tree View for Task Model -->
        <record id="view_task_tree" model="ir.ui.view">
            <field name="name">task.tree</field>
            <field name="model">task</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- Form View for Task Model -->
        <record id="view_task_form" model="ir.ui.view">
            <field name="name">task.form</field>
            <field name="model">task</field>
            <field name="arch" type="xml">
                <form>
                    <h1 class="oe_title">Settings</h1>
                    <sheet>
                        <notebook>
                            <page string="Task test">
                                <group>
                                    <field name="name"/>
                                    <field name="description"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>